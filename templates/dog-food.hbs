{{!--This is the layout that I would like to have. It's currently broken--}}
{{#each dog_brands}}
<div class="panel panel-info">
    <div class="panel-heading">
        <h3 class="panel-title"><b>{{name}}</b></h3>
    </div>
    <div class="panel-body">
      <table class="table table-striped table-hover">
		    <thead>
	        <tr>
            <th>Type of Food</th>
            <th>Bag Size</th>
            <th>Price</th>
	        </tr>
		    </thead>
		    <tbody>
	    		{{#each types}}
	        <tr class="info">
            <td>{{type}}</td>
            <td>{{volumes.[0].name}}</td>
            <td>${{volumes.[0].price}}</td>
	        </tr>
	        <tr class="info">
            <td>{{type}}</td>
            <td>{{volumes.[1].name}}</td>
            <td>${{volumes.[1].price}}</td>
	        </tr>
        {{/each}}
        </tbody>
      </table>
    </div>
</div>
{{/each}}



